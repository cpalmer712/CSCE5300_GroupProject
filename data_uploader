import logging
from DataToHDFS import HDFSClient

def main():
    # Configure logging
    logging.basicConfig(level=logging.INFO, format='%(asctime)s - %(levelname)s - %(message)s')

    # Initialize HDFS client
    hdfs_client = HDFSClient()

    # Define local and HDFS file paths
    local_dataset_path = '/Users/carsonpalmer/UNT Jupyter Notebook/medecine_data.csv'   # adjust as needed
    hdfs_dataset_path = '/user/hdfs/dataset.csv'   # destination path on HDFS

    # Upload file to HDFS
    hdfs_client.upload_file(local_dataset_path, hdfs_dataset_path)

if __name__ == '__main__':
    main()